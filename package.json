{
    "name": "nix-flake-explorer",
    "displayName": "Nix Flake Outputs Explorer",
    "description": "Browse and inspect Nix flake outputs in a tree view",
    "version": "0.1.0",
    "publisher": "coriago",
    "license": "MIT",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:flake.nix"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "flakeExplorer",
                    "title": "Flake Explorer",
                    "icon": "$(symbol-namespace)"
                }
            ]
        },
        "views": {
            "flakeExplorer": [
                {
                    "id": "flakeOutputsTree",
                    "name": "Outputs",
                    "icon": "$(list-tree)",
                    "contextualTitle": "Flake Outputs"
                },
                {
                    "id": "flakeStatus",
                    "name": "Status",
                    "type": "webview",
                    "visibility": "collapsed"
                }
            ]
        },
        "commands": [
            {
                "command": "flakeExplorer.refresh",
                "title": "Refresh",
                "icon": "$(refresh)"
            },
            {
                "command": "flakeExplorer.openValue",
                "title": "Open Value",
                "icon": "$(open-preview)"
            },
            {
                "command": "flakeExplorer.copyPath",
                "title": "Copy Attribute Path",
                "icon": "$(copy)"
            },
            {
                "command": "flakeExplorer.setRootPath",
                "title": "Set Root Path",
                "icon": "$(root-folder)"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "flakeExplorer.refresh",
                    "when": "view == flakeOutputsTree",
                    "group": "navigation"
                },
                {
                    "command": "flakeExplorer.setRootPath",
                    "when": "view == flakeOutputsTree"
                }
            ],
            "view/item/context": [
                {
                    "command": "flakeExplorer.openValue",
                    "when": "view == flakeOutputsTree",
                    "group": "inline"
                },
                {
                    "command": "flakeExplorer.copyPath",
                    "when": "view == flakeOutputsTree"
                }
            ]
        },
        "configuration": {
            "title": "Nix Flake Explorer",
            "properties": {
                "nixFlakeExplorer.rootPath": {
                    "type": "string",
                    "default": "",
                    "description": "Attribute path to use as root of the tree (e.g., 'nixosConfigurations.myhost.config'). Leave empty to show all flake outputs."
                },
                "nixFlakeExplorer.nixArgs": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "--offline"
                    ],
                    "description": "Extra arguments to pass to nix commands."
                },
                "nixFlakeExplorer.experimentalFeatures": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "nix-command",
                        "flakes"
                    ],
                    "description": "Nix experimental features to enable."
                },
                "nixFlakeExplorer.debounceMs": {
                    "type": "number",
                    "default": 500,
                    "description": "Debounce delay (ms) before refreshing after file changes."
                },
                "nixFlakeExplorer.watchPatterns": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "flake.nix",
                        "flake.lock",
                        "**/*.nix"
                    ],
                    "description": "Glob patterns for files to watch for changes."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "eslint src --ext ts",
        "package": "vsce package"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@types/vscode": "^1.85.0",
        "@typescript-eslint/eslint-plugin": "^6.13.0",
        "@typescript-eslint/parser": "^6.13.0",
        "eslint": "^8.54.0",
        "typescript": "^5.3.0"
    }
}